# Zilliz Cloud Load Test Tool Configuration
# Copy this file to config.yaml or ~/.zilliz-loadtest.yaml and fill in your values

# API credentials (can also be set via environment variables: ZILLIZ_API_KEY, ZILLIZ_DB_URL)
api_key: "your-api-key-here"
database_url: "https://your-cluster.zillizcloud.com"

# Default collection settings
default_collection: "my_collection"
default_vector_dim: 1024           # Cohere embed-english-v3 uses 1024 dimensions
default_metric_type: "COSINE"      # Options: L2, IP, COSINE (COSINE recommended for embeddings)

# Default test settings
default_duration: "30s"            # e.g., "30s", "1m", "5m"
default_qps_levels: [100, 500, 1000]

# Connection calculation settings
# Formula: connections = (QPS × expected_latency_ms) / 1000 × connection_multiplier
# (values are capped between 5 and 2000 connections).
connection_multiplier: 1.5
expected_latency_ms: 75.0

# Test parameters
warmup_queries: 100
top_k: 100                         # Use 100 for meaningful recall@100 and NDCG@100 metrics
search_level: 1                    # 1-10, higher = more accurate but slower
filter_expression: ""              # Optional filter expression, e.g., "id > 1000"
output_fields: []                  # Fields to return (empty = auto-detect ID field)

# Seed parameters
# For BEIR datasets with human-labeled relevance judgments, use:
#   seed_source: "beir:fiqa"       (57k docs, ~2.6 relevant/query)
#   seed_source: "beir:trec-covid" (171k docs, ~500 relevant/query)
#   seed_source: "beir:quora"      (522k docs, ~1.5 relevant/query)
# For synthetic data, use:
#   seed_source: "synthetic"
seed_vector_count: 1000000         # Number of vectors to seed
seed_vector_dim: 1024              # Vector dimension (1024 for Cohere embed-english-v3)
seed_batch_size: 15000             # Batch size for seeding
seed_source: "synthetic"           # Data source: "synthetic", "cohere", or "beir:<dataset>"

# Logging and observability
log_level: "INFO"                  # Log level: DEBUG, INFO, WARN, ERROR
log_format: "text"                 # Log format: text or json
output_directory: ""               # Default export directory (default: current directory)
max_retries: 3                     # Maximum retries for failed operations
timeout: "30s"                     # Global timeout for operations
